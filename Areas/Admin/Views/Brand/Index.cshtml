@model IEnumerable<BrandModel>
@{
    ViewData["title"] = "Brand Listed";
    Paginate pager = new Paginate();
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
    }
}
<h3>List Brand</h3>
<a class="btn btn-warning btn-sm" asp-action="Create" asp-controller="Brand">Add Brand</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Brand Desription</th>
            <th scope="col">Brand Slug</th>
            <th scope="col">Brand Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(item.Description)</td>
                <td>@item.Slug</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Display</span>
                    }
                    else
                    {
                        <span class="text text-danger">Hidden</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Brand" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Brand" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<partial name="_Paging" model="@pager" />

